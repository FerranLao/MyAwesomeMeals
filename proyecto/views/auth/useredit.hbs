
<h2>Edit your profile</h2>
<div class="container">
  <form action="/auth/editprofile" method="POST" id="form-container">
    <div class="row">
      <div class="col-25">
         <label for="username">Username</label>
      </div>
      <div class="col-75">
        <input id="username" type="text" name="username" placeholder="JonSnow" value="{{user.username}}">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
         <label for="password">Password</label>
      </div>
      <div class="col-75">
       <input id="password" type="password" name="password" placeholder="Your password">
      </div>
    </div>
     <div class="row">
      <div class="col-25">
         <label for="email">Email </label>
      </div>
      <div class="col-75">
        <input id="email" type="email" name="email" placeholder="pepe@pepe.com" value="{{user.email}}">
      </div>
    </div>
     <div class="row">
      <div class="col-25">
         <label for="phone">Phone number(optional) </label>
      </div>
      <div class="col-75">
         <input id="phone" type="text" name="phone" placeholder="123456789" value="{{user.phone}}">
      </div>
    </div>
     {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}
    <div class="row">
      <input type="submit" value="Create account">
    </div>
     <p class="account-message">
     Do you already have an account?
    <a href="/auth/login">Loggin</a>
  </p>
  </form>
</div>
