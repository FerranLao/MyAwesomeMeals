<h1>{{name}}</h1>

<div class="recipescontainer">
{{#each recipes}}
<div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <img src="{{this.imgPath}}">
        </div>
        <div class="card-content">
          <p>{{this.name}}</p>
        </div>
        <div class="card-action">
            <span style="display:none">{{this._id}}</span>
          <a href="/logged/recipe/{{this._id}}">see this recipe in detail</a>
          <a class="waves-effect waves-light btn-small reciperemove">Remove from menu</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>

<script src="/javascripts/recipemenu.js"></script>