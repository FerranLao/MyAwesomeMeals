<h2>Create your menu</h2>
<div class="row">
    <div class="input-field col s12">
        <input id="name" type="text" class="validate menuname">
        <label for="name">Name your menu</label>
    </div>
</div>
<div class="ingredientscontainer">
    <div class="menurecipes">
        {{#each recipes}}
        <div class="col s12 m7">
            <div class="card">
                <div class="card-image">
                    <img src="{{this.imgPath}}">
                </div>
                <div class="card-content">
                    <p>{{this.name}}</p>
                </div>
                <div class="card-action">
                    <a class="waves-effect waves-light btn-small addtochart">Add to your Menu</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="menulist ingredientList"></div>
</div>
<a class="waves-effect waves-light btn-large finishchart">Chart List</a>
</div>
<script src="/javascripts/newmenu.js"></script>